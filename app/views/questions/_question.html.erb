<div class="container-fluid question pt-4 pb-4">
  <div class="container pb-2 border-bottom">
    <div class="row mb-4">
      <div class="col-12 col-sm-8 mt-6">
      <div class="card question-card">
        <div class="card-body">
          <h5 class="card-title"><%= question.author %> asked</h5>
          <p class="card-subtitle mb-2 text-muted"><%= display_date(question) %></p>
          <p class="card-text">
            <%= markdown(question.body) %>
          </p>
        </div>
      </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-sm-8 mt-6">
        <% if question.answer %>
          <%= render 'questions/answer', answer: question.answer %>
        <% else %>
          <%= render 'questions/no_answer' %>
        <% end %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-12">
        <button class="toggle-question_comments-button" type="button" data-toggle="collapse" data-target="#question_comments<%= question.id %>" aria-expanded="false" aria-controls="<= "question_comments#{question.id}"">
          <%= question.question_comments.length %> comment<%= question.question_comments.length == 1 ? "" : "s" %>
          <span class=".icon"/>
        </button>
      </div>
    </div>
    <div class="mt-4 question_comments-container collapse" id="question_comments<%= question.id %>">
        <%= render 'question_comments/create', question: question %>
        <%= render 'comments/index', comments: question.question_comments %>
      </div>
    </div>
  </div>
</div>
